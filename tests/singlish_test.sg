
// Variable declaration using "chope"
chope name = "Singlish Programmer" lah
chope age = 25 lah
chope is_awesome = correct lah

// Print statements (without string + number concatenation)
print "Hello, world!" lah
print name lah
print age lah


// While loops using "keep doing"
chope counter = 1 lah
keep doing (counter <= 5) {
  print "Counter:" lah
  print counter lah
  counter = counter + 1 lah
}

// For loops using "do again from"
print "For loop demonstration:" lah
do again from (chope i = 0 lah i < 3 lah i = i + 1) {
  print "Loop number" lah
  print i lah
}

// Function declaration using "howdo"
howdo sayHello(person) {
  print "Hello," lah
  print person lah
}

// Function call
sayHello("Singapore") lah

// Function with multiple parameters
howdo addNumbers(a, b) {
  chope sum = a + b lah
  return sum lah
}

print "2 + 3 =" lah
print addNumbers(2, 3) lah



